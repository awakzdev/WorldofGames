pipeline{
    agent {
        node {
         label 'agent_1'
        }
    }
   parameters {
        string(name: 'ScriptPath', description: 'Path to your python script')
    }
    stages{
        stage('test'){
            steps{
                echo "${params.ScriptPath}"
                sh "python ${params.ScriptPath}"
            }
        }
    }
}