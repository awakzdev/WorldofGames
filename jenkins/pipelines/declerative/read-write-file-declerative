pipeline {
   agent { label 'agent_1' }
   stages {
       stage('write') {
           steps {
               script {
                   def date = new Date()
                   def data = "Hello World\nSecond line\n" + date
                   writeFile(file: '/external/dev/zorg.txt', text: data)
                   sh "ls -l"
               }
           }
       }
       stage('read') {
           steps {
               script {
                   def data = readFile(file: '/external/dev/zorg.txt')
                   println(data)
               }
           }
       }
   }
}
